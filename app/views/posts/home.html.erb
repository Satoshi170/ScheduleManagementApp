<div class="my-2 container-fluid d-flex flex-row justify-content-between">
    <h3>予定一覧</h3>
    <%= link_to "新規追加", 'posts/create', class:"btn btn-dark" %>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">タイトル</th>
            <th scope="col">開始日</th>
            <th scope="col">終了日</th>
            <th scope="col">終日</th>
            <th scope="col">更新日時</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.id %></td>
                <td><%= post.title %></td>
                <td><%= post.startdate %></td>
                <td><%= post.enddate %></td>
                <td><%= post.allday %></td>
                <td><%= post.updated_at %></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        <% end %>
    </tbody>
</table>        
<p>Find me in app/views/posts/home.html.erb</p>
