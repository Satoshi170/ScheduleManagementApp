<%= form_with model: post do |form| %>
    <% if post.errors.any? %>
        <div>
            <ul>
                <% post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <form>
        <div class="form-group text-center">
            <%= form.label "タイトル" %><br>
            <%= form.text_field :title %>
        </div>
        <div class="form-group text-center">
            <%= form.label "開始日" %><br>
            <%= form.text_field :startdate, class: "datepicker" %>
        </div>
        <div class="form-group text-center">    
            <%= form.label "終了日" %><br>
            <%= form.text_field :enddate, class: "datepicker" %>
        </div>
        <div class="form-group text-center">
            <%= form.label "スケジュールメモ" %><br>
            <%= form.text_area :content %>
        </div>
        <div class="form-group text-center">    
            <%= form.label "全日" %>
            <%= form.check_box :allday, :as => :boolean %>
        </div>
        <div class="text-center mt-3">
            <%= form.submit "作成する",class: "btn btn-dark" %>
        </div>
    </form>
<% end %>